---
import {SITE_TITLE} from "../../consts"
import Cherries from "./cherries.astro"
import Clouds from "./clouds.astro"
const cherryColour = "#ff2284"
---

<header>
	<nav>
		<p>
			<a href="/">
				<span>üê∞</span>
				<span>chee</span>
			</a>
		</p>
		<p style=`color: ${cherryColour}`>
			<a href="/cherries/" class="cherry-link">
				<Cherries cherries={cherryColour} stem="#40dcba" />
				<span>{SITE_TITLE}</span>
			</a>
		</p>
		<p style="color: white">
			<a href="https://quietparty.net">
				<Clouds />
				<span>quiet party</span>
			</a>
		</p>
	</nav>
</header>

<style>
	:root {
		font-family: var(--mono-family);
	}
	header {
		margin: 0;
		padding: 0 1em;
		background: black;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		font-weight: 500;
		color: white;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		display: flex;
		place-content: center;
		place-items: center;
		gap: 0.5ch;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
</style>
