		transform: scale(0.1);
		transition:
			transform 0.2s linear,
			opacity 0.5s ease;
	}
</style>

<script>
	function addMouseTrail() {
		let timeout = 200
		let spacing = 10
		let lastX = 0
		let lastY = 0
		let getRandom = (items: string[]) =>
			items[Math.floor(Math.random() * items.length)]
		let pause = false

		let trailers = `
